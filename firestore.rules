rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // LOGISTICS & FINANCE: Absolute lockdown. No client-side writing ever.
    match /ledger/{entryId} {
      allow write: if false;
      allow read: if false; 
    }
    
    match /invoices/{invoiceId} {
      allow write: if false;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /webhook_events/{eventId} {
      allow write: if false;
      allow read: if false;
    }

    match /orders/{orderId} {
      allow write: if false;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // INVENTORY: Public read, no write.
    match /products/{productId} {
      allow write: if false;
      allow read: if true;
    }
    
    // USER UX: Only owner can read/update limited fields.
    match /users/{userId} {
      allow create: if false;
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can update their own profile (e.g. locations), but NOT credit balance.
      allow update: if request.auth != null && request.auth.uid == userId 
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['credit', 'role']);
      
      match /orders/{orderId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }

      match /intents/{intentId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        // Intents are write-once by server only
        allow write: if false;
      }
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
