rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Block all direct client-side writes to sensitive collections
    match /orders/{orderId} {
      allow write: if false;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /invoices/{invoiceId} {
      allow write: if false;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    match /ledger/{entryId} {
      allow write: if false;
      allow read: if false; // Only accessible via Admin SDK
    }
    
    // Public product reading, but no writing
    match /products/{productId} {
      allow write: if false;
      allow read: if true;
    }
    
    // User profile: only the owner can read/update (no direct creation)
    match /users/{userId} {
      allow create: if false;
      allow read: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Sub-collections (intents, orders)
      match /{allSubcollections=**} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if false;
      }
    }
    
    // Default: block everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
